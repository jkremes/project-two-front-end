{{#each articles as |article|}}
  <!-- {{log article}} -->

  <!-- <div> -->
    <!-- <h1 data-id="{{article.id}}"> <small>Title: {{article.title}}</small></h1> -->
      <!-- <tbody data-id="{{article.id}}" -->
      <!-- <tbody> -->

        <tr data-id="{{article.id}}">
          <th scope="row">{{article.id}}</th>
          <td>{{article.description}}</td>
          <td>{{article.size}}</td>
          <td>{{article.color}}</td>
          <td type="submit" class="btn btn-primary delete-article">Remove</td>

<td type="submit" class="btn btn-primary update-article" data-toggle="modal" data-target="#update-article-id-form">
    Alter
</td>
</tr>

  <!-- Modal -->
  <div class="modal fade" id="update-article-id-form" tabindex="-1" role="dialog"
       aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">

              <!-- Modal Header -->
              <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">
                    Alter Article!
                </h4>
                  <button type="button" class="close" data-dismiss="modal">
                         <span aria-hidden="true">&times;</span>
                         <span class="sr-only">Close</span>
                  </button>
              </div>

              <!-- Modal Body -->
              <div class="modal-body">
                  <form role="form">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Description"/>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Size"/>
                    </div>
                    <div class="form-group">
                          <input type="text" class="form-control" placeholder="Color"
                    </div>
                  </form>
              </div>

              <!-- Modal Footer -->
              <div class="modal-footer">
                  <button type="button" class="btn btn-default"
                          data-dismiss="modal">
                              Close
                  </button>
                  <button type="button" class="btn btn-primary">
                      Save changes
                  </button>
              </div>
          </div>
      </div>
  </div>

{{/each}}
